{
  "name": "viridian",
  "version": "0.0.0",
  "private": true,
  "author": "Renzo Pigliacampo <renzopigliacampo@gmail.com>",
  "scripts": {
    "angular:build": "ng build",
    "angular:serve": "ng serve",
    "electron:build": "ng build && electron . --build",
    "electron:serve": "electron . --serve",
    "electron:pack": "electron-builder build --linux --win",
    "electron:pack:dir": "electron-builder build --dir",
    "electron:pack:linux": "electron-builder build --linux",
    "electron:pack:win": "electron-builder build --win"
  },
  "main": "main.js",
  "dependencies": {
    "@angular/animations": "~13.2.0",
    "@angular/common": "~13.2.0",
    "@angular/compiler": "~13.2.0",
    "@angular/core": "~13.2.0",
    "@angular/forms": "~13.2.0",
    "@angular/platform-browser": "~13.2.0",
    "@angular/platform-browser-dynamic": "~13.2.0",
    "@angular/router": "~13.2.0",
    "@ngx-translate/core": "^14.0.0",
    "@ngx-translate/http-loader": "^7.0.0",
    "@stencil/store": "^2.0.1",
    "extract-zip": "^2.0.1",
    "follow-redirects": "^1.15.2",
    "resizable": "^1.2.1",
    "rxjs": "~7.5.0",
    "tippy.js": "^6.3.7",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.2.5",
    "@angular/cli": "~13.2.5",
    "@angular/compiler-cli": "~13.2.0",
    "@types/electron": "^1.6.10",
    "@types/node": "^12.11.1",
    "autoprefixer": "^10.4.13",
    "electron": "^21.2.0",
    "electron-builder": "^23.6.0",
    "postcss": "^8.4.18",
    "tailwindcss": "^3.2.1",
    "typescript": "~4.5.2"
  },
  "build": {
    "productName": "Viridian",
    "appId": "com.hipnosis.viridian",
    "directories": {
      "output": "release/"
    },
    "files": ["dist", "main.js", "remote.js"],
    "linux": {
      "artifactName": "${productName}-${version}-Linux64.${ext}",
      "target": ["appImage", "deb", "7z"],
      "category": "Video"
    },
    "win": {
      "artifactName": "${productName}-${version}-Win64.${ext}",
      "target": ["nsis", "7z"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
